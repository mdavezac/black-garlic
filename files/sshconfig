  HostName gitlab.com
  {% if grains['os'] == "MacOS" -%}
  UseKeychain yes
  {% endif -%}
  AddKeysToAgent yes
  IdentityFile ~/.ssh/gitlab_{{keytype}}
  PreferredAuthentications publickey
